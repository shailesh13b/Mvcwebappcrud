@model IEnumerable<BowlingAlleyWeb.Models.Reservations>

@{
    ViewData["Title"] = "GetReservationDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ReservationDetails</h1>
<div class="col-md-3">
    Welcome  <strong>@TempData["username"]</strong>
</div>


@if (Model.Count() == 0)
{
    <h2> no details found </h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReservationId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReservedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReservedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SlotId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservationId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SlotId)
                    </td>
                    <td>
                        @Html.ActionLink("Approve", "Approve", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Reject", "Reject", new { item.ReservationId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}